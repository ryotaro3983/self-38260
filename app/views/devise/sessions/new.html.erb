<div class="box-login">
  <h1 class="register-title">ログイン</h1>
  <div class="registration-form">
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, size:"30" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "off", size:"30" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %><%= f.label :remember_me, "ログインしたままにする" %><br />
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", class:"submit-button" %>
      </div>

      <div class="link-newusr">
        <h5 class="text-newusr">ユーザー登録がまだの方</h5>
        <%= link_to "新規登録", new_user_registration_path, class:"link-newusr-button" %>
      </div>
    <% end %>
  </div>
  <p class="top-link"><%= link_to "TOPページへ", root_path %></p>
</div>
