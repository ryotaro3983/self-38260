<div class="user-edit-contents">
  <h1>プロフィール編集</h1>
    <div class="user-edit-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <p><%= f.label :email %></p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <p><%= f.label :nickname %></p>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>

      <div class="field">
        <p><%= f.label :password %>(未記入の場合はそのままになります)</p>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <p><%= f.label :password_confirmation %></p>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <p><%= f.label :profile, "プロフィール" %></p>
        <%= f.text_area :profile, autocomplete: "profile" %>
      </div>

      <div class="actions">
        <%= f.submit "保存", class:"user-update-btn" %>
      </div>
    <% end %>

    <%= link_to "戻る", user_path(current_user.id), class:"redirect-btn" %>
  </div>
</div>