<%= render "shared/header" %>

<div class="box-posts">

  <div class="post-new">
    <div class="post-new-button">
      <%= link_to "投稿する", new_post_path %>
    </div>
  </div>
  <%# <%= render partial: "post" %>

<%# ツイート部分 %>
  <% @posts.each do |post| %>
    <% if user_signed_in? && current_user.id == post.user_id %>
    <div class="box-post">
      <div class="post">
        <p class="date-post"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
        <% if post.image.attached? %>
          <div class="box-post-image">
            <%= image_tag post.image, width:"100%", class:"post-image" %>
          </div>
        <% end %>
        <div class="post-text-box">
          <p><%= safe_join(post.text.split("\n"),tag(:br)) %></p>
          <div class="btn-option">
            <span><%= link_to "編集", edit_post_path(post.id), class:"btn-dlt"%></span>
            <span><%= link_to "削除", post_path(post.id), method: :delete %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
<%# ツイート部分 %>

</div>