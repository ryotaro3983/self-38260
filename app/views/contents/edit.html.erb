<%= render "shared/header" %>

<h1>編集ページ</h1>

<%= form_with model: @content, local: true do |f| %>
  <%= f.file_field :image %>
  <%= f.text_field :title, placeholder: "タイトル" %>
  <%= f.text_field :genre, placeholder: "ジャンル" %>
  <%= f.text_field :memo, placeholder: "メモやコメントなど", maxlength: "200" %>
  <%= f.submit "投稿する" %>
<% end %>